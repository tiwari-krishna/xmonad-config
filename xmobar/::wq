                           ]
       , borderColor = "black"
       , border = TopB
       , bgColor = "#222736"
       --, fgColor = "grey"
       , fgColor = "#ffffff"
       , alpha = 255
       , position = Static { xpos = 0 , ypos = 0, width = 1366, height = 18 }
       , allDesktops = True
