       , commands = [
		      Run Date "<fn=1> \xf133 </fn> %H:%M %A %B %d" "Date" 600
            , Run Com "date" "date" 600
            , Run Battery [
            	"-t", " <fn=1> \xf240 </fn> <acstatus>: <left>% - <timeleft>",
             	"--",
	            "-O", "AC",
	            "-o", "Bat",
	            "-h", "green",
	            "-l", "red"
	             ] 10
	    , Run Volume "default" "Master" [ "-t", "<fn=1> \xf485 </fn> <volume>%" ] 50
            , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " <fn=2>%StdinReader%</fn> }{ %battery% | %default:Master% | <fc=#ee9a00>%date%</fc>" }
